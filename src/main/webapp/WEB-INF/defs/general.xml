		<put-attribute name="body" value="" />
	</definition>

	<definition name="music" extends="home">
		<put-attribute name="bodyClass" value="music" />
		<put-attribute name="topBar" value="/WEB-INF/jsp/tiles/music/music-player.jsp" />
		<put-attribute name="backgroundImageType" value="music" />
		<put-attribute name="body">
			<definition extends="music.panel">
				<put-attribute name="body" value="/WEB-INF/jsp/tiles/music/music.jsp" />

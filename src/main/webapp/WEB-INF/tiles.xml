<tiles-definitions>

	<definition name="home" template="/WEB-INF/jsp/layouts/default.jsp">
		<put-attribute name="bodyClass" value="default" />
		<put-attribute name="topBar" value="/WEB-INF/jsp/tiles/top-bar.jsp" />

<?xml version="1.0" encoding="UTF-8"?>

<!-- <!DOCTYPE mapping SYSTEM "http://castor.codehaus.org/mapping.dtd"> -->
<mapping>

	<class name="org.mashupmedia.remote.RemoteMusicLibrary">
		<field name="songs" collection="arraylist">
			<bind-xml name="songs" node="element" />
		</field>
	</class>

	
	<class name="org.mashupmedia.model.media.Song" auto-complete="false">
		<field name="id" type="long">
			<bind-xml name="id" node="attribute" />
		</field>
		<field name="sizeInBytes" type="long">
			<bind-xml name="sizeInBytes" node="element" />
		</field>
		<field name="vote" type="integer">
			<bind-xml name="vote" node="element" />
		</field>
		<field name="format" type="string">
			<bind-xml name="format" node="element" />
		</field>
		<field name="searchText" type="string">
			<bind-xml name="searchText" node="element" />
		</field>
		<field name="mediaTypeValue" type="string">
			<bind-xml name="mediaTypeValue" node="element" />
		</field>
		<field name="summary" type="string">
			<bind-xml name="summary" node="element" />
		</field>
		<field name="displayTitle" type="string">
			<bind-xml name="displayTitle" node="element" />
		</field>
		<field name="enabled" type="boolean">
			<bind-xml name="enabled" node="element" />
		</field>
		<field name="trackNumber" type="integer">
			<bind-xml name="trackNumber" node="element" />
		</field>
		<field name="title" type="string">
			<bind-xml name="title" node="element" />
		</field>
		<field name="bitRate" type="long">
			<bind-xml name="bitRate" node="element" />
		</field>
	
		<field name="album" type="org.mashupmedia.model.media.Album">
			<bind-xml name="album" node="element" />
		</field>
		
		<field name="genre" type="org.mashupmedia.model.media.Genre">
			<bind-xml name="genre" node="element" />
		</field>
		<field name="year" type="org.mashupmedia.model.media.Year">
			<bind-xml name="year" node="element" />
		</field>
		<field name="artist" type="org.mashupmedia.model.media.Artist">
			<bind-xml name="artist" node="element" />
		</field>
	</class>

	<class name="org.mashupmedia.model.media.Album" auto-complete="true">
		<field name="id" transient="true" />
		<field name="artist" transient="true" />
		<field name="albumArtImage" type="org.mashupmedia.model.media.AlbumArtImage">
			<bind-xml name="albumArtImage" node="element" />
		</field>
		<field name="songs" transient="true" />
	</class>

	<class name="org.mashupmedia.model.media.Artist" auto-complete="false">
		<field name="name" type="String">
			<bind-xml name="name" node="element" />
		</field>
		<field name="folderName" type="String">
			<bind-xml name="folderName" node="element" />
		</field>
		<field name="indexText" type="String">
			<bind-xml name="indexText" node="element" />
		</field>
		<field name="indexLetter" type="String">
			<bind-xml name="indexLetter" node="element" />
		</field>
		<field name="remoteId" type="String">
			<bind-xml name="remoteId" node="element" />
		</field>
	</class>

	<class name="org.mashupmedia.model.media.Genre" auto-complete="true">
		<field name="id" transient="true" />
	</class>

	<class name="org.mashupmedia.model.media.Year" auto-complete="true">
		<field name="id" transient="true" />
	</class>

	<class name="org.mashupmedia.model.media.AlbumArtImage" auto-complete="true">
		<field name="id" transient="true" />
		<field name="library" transient="true" />
		<field name="album" transient="true" />
	</class>

</mapping>
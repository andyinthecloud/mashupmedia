<?xml version="1.0" encoding="UTF-8"?>

<!-- 
<!DOCTYPE mapping SYSTEM "http://castor.codehaus.org/mapping.dtd">
 -->
 
<mapping>

	<class name="org.mashupmedia.model.media.Song" auto-complete="true">
		<field name="album" type="org.mashupmedia.model.media.Album">
			<bind-xml name="album" node="element" />
		</field>
		<field name="genre" type="org.mashupmedia.model.media.Genre">
			<bind-xml name="genre" node="element" />
		</field>
		<field name="year" type="org.mashupmedia.model.media.Year">
			<bind-xml name="year" node="element" />
		</field>
		<field name="artist" type="org.mashupmedia.model.media.Artist">
			<bind-xml name="artist" node="element" />
		</field>
	</class>

	<class name="org.mashupmedia.model.media.Album" auto-complete="true">
		<field name="id" transient="true"/>
		<field name="artist" transient="true" />
		<field name="albumArtImage" type="org.mashupmedia.model.media.AlbumArtImage">
			<bind-xml name="albumArtImage" node="element" />
		</field>
		<field name="songs" transient="true" />
	</class>

	<class name="org.mashupmedia.model.media.Artist" auto-complete="true">
		<field name="id" transient="true" />
		<field name="albums" transient="true" />
	</class>

	<class name="org.mashupmedia.model.media.Genre" auto-complete="true">
		<field name="id" transient="true" />
	</class>

	<class name="org.mashupmedia.model.media.Year" auto-complete="true">
		<field name="id" transient="true" />
	</class>

	<class name="org.mashupmedia.model.media.AlbumArtImage" auto-complete="true">
		<field name="id" transient="true" />
		<field name="library" transient="true" />
		<field name="album" transient="true" />
	</class>

</mapping>
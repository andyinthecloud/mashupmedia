    "version": "0.2.0",
    "configurations": [    
        {
            "type": "java",
            "name": "Mashup Media on local",
            "request": "launch",
            "cwd": "${workspaceFolder}/mashupmedia-server",
            "console": "internalConsole",
            "mainClass": "org.mashupmedia.MashupMediaApplication",
            "projectName": "mashupmedia-server",
            "vmArgs": "-DmashupMediaHome=/home/andy/Development/mashup-media-home",   
            "args": "--spring.profiles.active=local",     
            "env": {
                "mashupmediaHome": "/home/andy/Development/mashup-media-home"
            }
        }
    ]

}